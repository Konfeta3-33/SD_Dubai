<%#= render 'shared/errors', object: @user, class: 'btn btn-primary btn-lg' %>

<%= form_with model: @user do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :login, class: 'col-sm-2 col-form-label' %>
    </div>

    <div class="col-sm-10">
      <%= f.email_field :login, placeholder: "login", class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :name, class: 'col-sm-2 col-form-label' %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :name, placeholder: "name", class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :password, class: 'col-sm-2 col-form-label' %>
    </div>

    <div class="col-sm-10">
      <%= f.password_field :password, placeholder: "password", class: 'form-control
      form-control-lg' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :password_confirmation, class: 'col-sm-2 col-form-label' %>
    </div>

    <div class="col-sm-10">
      <%= f.password_field :password_confirmation, placeholder: "cofirm password", class:
        'form-control
      form-control-lg' %>
    </div>
  </div>

  <%= f.submit 'Register', class: 'btn btn-primary btn-lg' %>
<% end %>
