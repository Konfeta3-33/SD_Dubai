<div class="flex justify-between">
  <%= button_to "Back", user_session_path, class: 'btn btn-default' %>
  <% if policy(Student).create? %>
    <%= link_to "Create Student", new_student_path, class: 'link-button-green' %>
  <% end %>
</div>
<div>
  <h2 class="mb-4 mt-4 text-center font-bold">All Students:</h2>
  <table class="table-auto w-full border">
    <thead>
    <tr>
      <th class="border-2 py-1 px-3">
        Name, Surname
      </th>
      <th class="border-2 py-1 px-3">
        Date update
      </th>
      <th class="border-2 py-1 px-3">
        ID Number
      </th>
      <th class="border-2 py-1 px-3">
        Type
      </th>
    </tr>
    </thead>
    <tbody>
    <% @students.each do |student| %>
      <tr>
        <td class="border-2 py-1 px-3">
          <%= link_to student_path(student) do %>
            <%= "#{student.name} #{student.surname}" %>
          <% end %>
        </td>
        <td class="border-2 py-1 px-3">
          <%= "#{student.updated_at}" %>
        </td>
        <td class="border-2 py-1 px-3">
          <%= "#{student.id}" %>
        </td>
        <td class="border-2 py-1 px-3">Cat. B</td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
